      "payloads": [
        "'; DROP TABLE users; --",
        "' OR '1'='1",
        "'; INSERT INTO users VALUES ('hacker', 'password'); --"
      ]
    },
    {
      "name": "xss_attacks",
      "payloads": [
        "<script>alert('xss')</script>",
        "javascript:alert('xss')",
        "<img src=x onerror=alert('xss')>"
      ]
    },
    {
      "name": "path_traversal",
