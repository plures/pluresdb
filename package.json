{
  "name": "@plures/pluresdb",
  "version": "1.9.0",
  "description": "P2P Graph Database with SQLite Compatibility - Local-first, offline-first database for modern applications",
  "main": "dist/node-index.js",
  "types": "dist/node-index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/node-index.d.ts",
      "require": "./dist/node-index.js",
      "default": "./dist/node-index.js"
    },
    "./node": {
      "types": "./dist/node-index.d.ts",
      "require": "./dist/node-index.js",
      "default": "./dist/node-index.js"
    },
    "./better-sqlite3": {
      "types": "./dist/better-sqlite3.d.ts",
      "require": "./dist/better-sqlite3.js",
      "default": "./dist/better-sqlite3.js"
    },
    "./vscode": {
      "types": "./dist/vscode/extension.d.ts",
      "require": "./dist/vscode/extension.js",
      "default": "./dist/vscode/extension.js"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "require": "./dist/cli.js",
      "default": "./dist/cli.js"
    },
    "./types": {
      "types": "./dist/types/node-types.d.ts",
      "require": "./dist/types/node-types.js",
      "default": "./dist/types/node-types.js"
    },
    "./local-first": {
      "types": "./dist/local-first/unified-api.d.ts",
      "require": "./dist/local-first/unified-api.js",
      "default": "./dist/local-first/unified-api.js"
    },
    "./embedded": {
      "types": "./embedded.d.ts",
      "require": "./embedded.js",
      "default": "./embedded.js"
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "pluresdb": "dist/cli.js"
  },
  "scripts": {
    "build": "npm run build:lib && npm run build:web",
    "build:lib": "tsc -p tsconfig.json",
    "build:web": "cd web/svelte && npm install && npm run build",
    "dev": "deno run -A --unstable-kv --watch src/main.ts serve --port 34567",
    "start": "node dist/cli.js serve",
    "test": "deno test -A --unstable-kv --sloppy-imports",
    "test:azure:relay": "deno test --allow-net --allow-env azure/tests/relay-tests.ts",
    "test:azure:full": "npm run test:azure:relay",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "fmt:check": "prettier --check .",
    "fmt": "prettier --write .",
    "verify": "npm run build:lib && npm test",
    "prepare": "npm run build:lib",
    "prepublishOnly": "npm run verify && npm run build:web",
    "validate-publish": "node scripts/validate-npm-publish.js",
    "postinstall": "node scripts/postinstall.js",
    "release-check": "node scripts/release-check.js",
    "update-changelog": "node scripts/update-changelog.js"
  },
  "keywords": [
    "database",
    "graph-database",
    "p2p",
    "sqlite",
    "local-first",
    "offline-first",
    "crdt",
    "vector-search",
    "deno",
    "typescript",
    "vscode",
    "extension",
    "embedded",
    "sync",
    "encryption"
  ],
  "author": "Plures Organization",
  "license": "AGPL-3.0",
  "homepage": "https://github.com/plures/pluresdb#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/plures/pluresdb.git"
  },
  "bugs": {
    "url": "https://github.com/plures/pluresdb/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "files": [
    "dist/",
    "web/svelte/dist/",
    "legacy/",
    "examples/",
    "scripts/",
    "embedded.js",
    "embedded.d.ts",
    "crates/pluresdb-node/index.d.ts",
    "crates/pluresdb-node/index.js",
    "crates/pluresdb-node/*.node",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "hyperswarm": "^4.8.4",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.0",
    "@types/vscode": "^1.104.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
