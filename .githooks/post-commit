#!/bin/sh
# Knowledge Engine Pattern Recording Hook
# Records successful patterns after commit

echo "ðŸ“Š Knowledge Engine: Recording successful patterns..."

# Get commit message and files
COMMIT_MSG=$(git log -1 --pretty=%B)
COMMIT_FILES=$(git diff-tree --no-commit-id --name-only -r HEAD)

# Record the successful commit pattern
code --command knoEng.ai.learnPattern --args "success" 2>/dev/null || true

# Update statistics
code --command knoEng.ai.getStatistics 2>/dev/null || true

exit 0
