{
  "name": "@plures/pluresdb",
  "version": "1.4.2",
  "exports": {
    ".": "./mod.ts",
    "./cli": "./legacy/main.ts",
    "./main": "./legacy/main.ts"
  },
  "publish": {
    "include": [
      "mod.ts",
      "legacy/**/*.ts",
      "docs/**/*.md",
      "README.md",
      "LICENSE"
    ],
    "exclude": [
      "legacy/node-index.ts",
      "legacy/node-wrapper.ts",
      "legacy/cli.ts",
      "dist/**/*",
      "node_modules/**/*"
    ]
  },
  "tasks": {
    "dev": "deno run -A --unstable-kv --watch legacy/main.ts serve",
    "test": "deno test -A --unstable-kv --parallel --coverage=coverage legacy/tests/",
    "test:unit": "deno test -A --unstable-kv --parallel legacy/tests/unit/",
    "test:integration": "deno test -A --unstable-kv --parallel legacy/tests/integration/",
    "test:performance": "deno test -A --unstable-kv --parallel legacy/tests/performance/",
    "test:security": "deno test -A --unstable-kv --parallel legacy/tests/security/",
    "test:e2e": "deno test -A --unstable-kv --parallel legacy/tests/e2e/",
    "test:coverage": "deno coverage coverage --html",
    "test:watch": "deno test -A --unstable-kv --watch legacy/tests/",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "check": "deno check legacy/main.ts",
    "compile": "deno compile -A --unstable-kv --target x86_64-unknown-linux-gnu --output pluresdb legacy/main.ts",
    "benchmark": "deno run -A --unstable-kv legacy/benchmarks/run-benchmarks.ts",
    "benchmark:memory": "deno run -A --unstable-kv legacy/benchmarks/memory-benchmarks.ts",
    "benchmark:network": "deno run -A --unstable-kv legacy/benchmarks/network-benchmarks.ts",
    "benchmark:vector": "deno run -A --unstable-kv legacy/benchmarks/vector-benchmarks.ts"
  },
  "test": {
    "include": ["legacy/tests/**/*.test.ts"],
    "exclude": ["legacy/tests/fixtures/**/*"]
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.15",
    "@std/testing": "jsr:@std/testing@^1.0.16"
  },
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window", "deno.ns", "deno.unstable"],
    "strict": true
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "include": ["legacy/**/*.ts", "mod.ts", "scripts/**/*.ts"],
    "exclude": [
      "legacy/tests/**/*",
      "legacy/node-index.ts",
      "legacy/node-wrapper.ts",
      "legacy/cli.ts",
      "dist/**/*",
      "node_modules/**/*",
      "examples/**/*",
      "demo/**/*",
      "rusty-gun/**/*",
      "web/**/*",
      "packaging/**/*",
      "installer/**/*",
      "crates/**/*",
      "tests/**/*",
      "scripts/postinstall.js"
    ],
    "rules": {
      "tags": ["recommended"],
      "exclude": [
        "no-explicit-any",
        "require-await",
        "ban-ts-comment"
      ]
    }
  }
}
