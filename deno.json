{
  "tasks": {
    "dev": "deno run -A --watch src/main.ts serve",
    "test": "deno test -A --parallel --coverage=coverage src/tests/",
    "test:unit": "deno test -A --parallel src/tests/unit/",
    "test:integration": "deno test -A --parallel src/tests/integration/",
    "test:performance": "deno test -A --parallel src/tests/performance/",
    "test:security": "deno test -A --parallel src/tests/security/",
    "test:e2e": "deno test -A --parallel src/tests/e2e/",
    "test:coverage": "deno coverage coverage --html",
    "test:watch": "deno test -A --watch src/tests/",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "check": "deno check src/main.ts",
    "compile": "deno compile -A --target x86_64-unknown-linux-gnu --output pluresdb src/main.ts",
    "benchmark": "deno run -A src/benchmarks/run-benchmarks.ts",
    "benchmark:memory": "deno run -A src/benchmarks/memory-benchmarks.ts",
    "benchmark:network": "deno run -A src/benchmarks/network-benchmarks.ts",
    "benchmark:vector": "deno run -A src/benchmarks/vector-benchmarks.ts"
  },
  "test": {
    "include": ["src/tests/**/*.test.ts"],
    "exclude": ["src/tests/fixtures/**/*"],
    "coverage": {
      "exclude": [
        "src/tests/**/*",
        "src/benchmarks/**/*",
        "src/demo/**/*",
        "dist/**/*"
      ]
    }
  },
  "imports": {
    "std/": "https://deno.land/std@0.224.0/",
    "assert": "https://deno.land/std@0.224.0/assert/mod.ts",
    "testing": "https://deno.land/std@0.224.0/testing/mod.ts"
  },
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window", "deno.ns", "deno.unstable"],
    "strict": true
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": ["src/**/*.ts"],
      "exclude": ["src/tests/fixtures/**/*", "dist/**/*"]
    }
  }
}