{
  "scopeName": "source.rusty-gun-query",
  "name": "Rusty Gun Query",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash",
          "match": "//.*$"
        },
        {
          "name": "comment.block",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control",
          "match": "\\b(if|else|for|while|do|switch|case|default|break|continue|return|try|catch|finally|throw|new|delete|typeof|instanceof|in|of|with|as|is)\\b"
        },
        {
          "name": "keyword.operator",
          "match": "\\b(and|or|not|xor|mod|div|rem)\\b"
        },
        {
          "name": "keyword.other",
          "match": "\\b(CREATE|READ|UPDATE|DELETE|SELECT|INSERT|UPDATE|DELETE|FROM|WHERE|JOIN|INNER|LEFT|RIGHT|OUTER|ON|GROUP|BY|ORDER|ASC|DESC|LIMIT|OFFSET|HAVING|DISTINCT|UNION|INTERSECT|EXCEPT|WITH|RECURSIVE|CASE|WHEN|THEN|ELSE|END|EXISTS|IN|BETWEEN|LIKE|ILIKE|SIMILAR|TO|ESCAPE|IS|NULL|NOT|TRUE|FALSE|UNKNOWN|CAST|EXTRACT|SUBSTRING|TRIM|LENGTH|UPPER|LOWER|COALESCE|NULLIF|GREATEST|LEAST|ROUND|TRUNC|FLOOR|CEIL|ABS|SIGN|MOD|POWER|SQRT|EXP|LN|LOG|SIN|COS|TAN|ASIN|ACOS|ATAN|ATAN2|RANDOM|PI|E)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric",
          "match": "\\b(0[xX][0-9a-fA-F]+|0[oO][0-7]+|0[bB][01]+|[0-9]+(\\.[0-9]+)?([eE][+-]?[0-9]+)?)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator",
          "match": "[+\\-*/%=<>!&|^~?:]"
        }
      ]
    }
  }
}


